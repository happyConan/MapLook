<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/strangercard_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/addfriend_strangercard"
            android:text="添加好友"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="41dp"
            android:layout_marginLeft="87dp"
            android:layout_marginStart="87dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/sendmessage_strangercard"
            android:text="发送消息"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:layout_alignTop="@+id/addfriend_strangercard"
            android:layout_toRightOf="@+id/addfriend_strangercard"
            android:layout_toEndOf="@+id/addfriend_strangercard" />

    </RelativeLayout>

</LinearLayout>
