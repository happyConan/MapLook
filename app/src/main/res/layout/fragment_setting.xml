<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team.maplook.SettingFragment">
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--基本资料-->
        <Button
            android:id="@+id/btn_setting_info"
            android:text="@string/btn_setting_info"
            android:textSize="16sp"
            android:textColor="#598ca1"
            android:textAlignment="viewStart"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_setting_info"
            android:layout_height="wrap_content" />
        <!--聊天背景-->
        <Button
            android:id="@+id/btn_setting_chatbg"
            android:text="@string/btn_setting_chatbg"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:background="#ffffff"
            android:textColor="#598ca1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_setting_chatbg"
            />
    </LinearLayout>
    <!--退出登录-->
    <LinearLayout
        android:paddingTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:gravity="center"
            android:id="@+id/btn_setting_quit"
            android:text="@string/btn_setting_quit"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:textColor="#598ca1"
            android:background="#E57741"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_setting_quit"/>
    </LinearLayout>
</RelativeLayout>
