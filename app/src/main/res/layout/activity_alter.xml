<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#E57741"
        >
        <TextView
            android:id="@+id/tv_alter_title"
            android:text="@string/tv_alter_title"
            android:textSize="20sp"
            android:textColor="#429A8D"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="60dp">

        <LinearLayout
            android:id="@+id/nickname_rel_Fri"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tv_alter_namehint"
                android:text="@string/tv_alter_namehint"
                android:paddingLeft="20dp"
                android:paddingRight="90dp"
                android:drawableLeft="@drawable/tv_card_namehint"
                android:textSize="16sp"
                android:textColor="#598ca1"

                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_alter_name"
                android:hint="@string/et_alter_name"
                android:textSize="16sp"
                android:textColor="#737070"
                android:inputType="text"

                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personalnote_rel_Fri"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tv_alter_discriptionhint"
                android:text="@string/tv_alter_discriptionhint"
                android:paddingLeft="20dp"
                android:paddingRight="60dp"
                android:textSize="16sp"
                android:textColor="#598ca1"
                android:gravity="center"
                android:drawableLeft="@drawable/tv_card_descriptionhint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_alter_discription"
                android:hint="@string/et_alter_discription"
                android:textSize="16sp"
                android:textColor="#737070"
                android:inputType="text"

                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/headportait_rel_Fri"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="10dp">
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="60dp"
                android:id="@+id/tv_alter_pwdhint"
                android:text="@string/tv_alter_pwdhint"
                android:textSize="16sp"
                android:textColor="#598ca1"

                android:drawableLeft="@drawable/ic_alter_pwd"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/id_c_alter_pwd"
                android:hint="@string/et_alter_pwd"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColor="#737070"

                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_alter_save"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_alter_save"
                android:textSize="16sp"
                android:drawableLeft="@drawable/btn_alter_save"
                android:textColor="#E57741"
                android:background="#429A8D"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
