<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#E57741"
            >
            <!--个人资料-->
            <TextView
                android:id="@+id/tv_personalcard_title"
                android:text="@string/tv_personalcard_title"
                android:textSize="20sp"
                android:textColor="#429A8D"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="60dp">
            <LinearLayout
                android:id="@+id/headportait_rel_Fri"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="10dp">
                <!--头像-->
                <TextView
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="160dp"
                    android:id="@+id/tv_personalcard_hphint"
                    android:text="@string/tv_card_hphint"
                    android:textSize="16sp"
                    android:textColor="#598ca1"
                    android:drawableLeft="@drawable/image_card_hphint"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp">
                    <ImageView
                        android:id="@+id/id_c_card_icon"
                        android:background="@drawable/image_personalcard_hp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nickname_rel_Fri"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <!--昵称-->
                <TextView
                    android:id="@+id/tv_personalcard_namehint"
                    android:text="@string/tv_card_namehint"
                    android:paddingLeft="20dp"
                    android:paddingRight="160dp"
                    android:drawableLeft="@drawable/image_card_namehint"
                    android:textSize="16sp"
                    android:textColor="#598ca1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--你好像很好吃-->
                <TextView
                    android:id="@+id/tv_personalcard_name"
                    android:text="@string/tv_personalcard_name"
                    android:textSize="16sp"
                    android:textColor="#737070"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalnote_rel_Fri"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <!--个人说明-->
                <TextView
                    android:id="@+id/tv_personalcard_descriptionhint"
                    android:text="@string/tv_card_descriptionhint"
                    android:paddingLeft="20dp"
                    android:paddingRight="70dp"
                    android:textSize="16sp"
                    android:textColor="#598ca1"
                    android:gravity="center"
                    android:drawableLeft="@drawable/image_card_descriptionhint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--Now get out of my life-->
                <TextView
                    android:id="@+id/tv_personalcard_description"
                    android:text="@string/tv_personalcard_description"
                    android:textSize="16sp"
                    android:textColor="#737070"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--修改头像-->
                <Button
                    android:id="@+id/btn_personalcard_alterhp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_personalcard_alterhp"
                    android:textSize="16sp"
                    android:textAlignment="viewStart"
                    android:drawableLeft="@drawable/btn_personalcard_alterhp"
                    android:textColor="#E57741"
                    android:background="#429A8D"/>
                <!--修改资料-->
                <Button
                    android:id="@+id/btn_personalcard_alterinfo"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_personalcard_alterinfo"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/btn_personalcard_alterinfo"
                    android:textColor="#E57741"
                    android:background="#429A8D"/>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
