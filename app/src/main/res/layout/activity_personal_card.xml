<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#E57741"
            >
            <TextView
                android:id="@+id/home_title"
                android:text="个人资料"
                android:textSize="20sp"
                android:textColor="#429A8D"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="60dp">
            <LinearLayout
                android:id="@+id/headportait_rel_Fri"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="160dp"
                    android:id="@+id/id_p_card_icon"
                    android:text="头像"
                    android:textSize="16sp"
                    android:textColor="#598ca1"
                    android:drawableLeft="@drawable/ic_setting_info"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp">
                    <ImageView
                        android:id="@+id/id_c_card_icon"
                        android:background="@drawable/ic_hjt"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nickname_rel_Fri"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/id_p_card_name"
                    android:text="昵称"
                    android:paddingLeft="20dp"
                    android:paddingRight="160dp"
                    android:drawableLeft="@drawable/ic_card_name"
                    android:textSize="16sp"
                    android:textColor="#598ca1"

                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/id_c_card_name"
                    android:text="你好像很好吃"
                    android:textSize="16sp"
                    android:textColor="#737070"

                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalnote_rel_Fri"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/id_p_card_description"
                    android:text="个人说明"
                    android:paddingLeft="20dp"
                    android:paddingRight="70dp"
                    android:textSize="16sp"
                    android:textColor="#598ca1"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_card_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/id_c_card_description"
                    android:text="Now get out of my life"
                    android:textSize="16sp"
                    android:textColor="#737070"

                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_alter_icon"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改头像                                                       "
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_setting_chatbg"
                    android:textColor="#E57741"
                    android:background="#429A8D"/>
                <Button
                    android:id="@+id/btn_alter_info"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改资料                                                     >"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_card_alterinfo"
                    android:textColor="#E57741"
                    android:background="#429A8D"/>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
