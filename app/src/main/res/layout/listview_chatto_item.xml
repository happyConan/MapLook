<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chatto_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#f5f5f5"
        android:background="#bebebe"
        android:text="2012-12-12 12:12:12"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chatto_info"
                android:text="啧神经网络真难"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/ic_chatto_bg_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/chatto_name"
                android:layout_gravity="right"
                android:text="你好像很好吃"
                android:textSize="16sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/chatto_image"
                android:background="@drawable/ic_hjt"
                android:layout_width="49dp"
                android:layout_height="49dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>